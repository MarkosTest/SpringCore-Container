<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!-- **************** CONSTRUCTION INJECTION XML **************** -->
			
	<bean id="userBean" class="com.marcos.container.domain.injection.constructor.XmlUser">
		<constructor-arg ref="carBean"></constructor-arg>
	<!-- <constructor-arg ref="houseBean"></constructor-arg>  if I add this argument bean fails to be created
			because User doesn't have constructor that takes these two parameters -->
	</bean>
	
	<bean id="carBean" class="com.marcos.container.domain.injection.constructor.XmlCar"/>
	
	<bean id="houseBean" class="com.marcos.container.domain.injection.constructor.XMLHouse"/>
	
	<!-- **************** CONSTRUCTION INJECTION XML **************** -->
	
	
	
	
	
	<!-- **************** CONSTRUCTION INJECTION @@@ **************** -->
	
	<context:component-scan base-package="com.marcos.container"/>
	<!-- 	<context:annotation-config/>			 -->
	
	
	<!-- **************** CONSTRUCTION INJECTION @@@ **************** -->

</beans>
